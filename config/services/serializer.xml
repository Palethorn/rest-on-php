<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd
        http://symfony.com/schema/dic/symfony
        https://symfony.com/schema/dic/symfony/symfony-1.0.xsd">

    <services>
        <service id="symfony.serializer.encoder.xml_encoder" class="Symfony\Component\Serializer\Encoder\XmlEncoder">
            <tag>symfony.serializer.encoders</tag>
        </service>

        <service id="symfony.serializer.encoder.json_encoder" class="Symfony\Component\Serializer\Encoder\JsonEncoder">
            <tag>symfony.serializer.encoders</tag>
        </service>

        <service id="symfony.serializer.normalizer.object" class="Symfony\Component\Serializer\Normalizer\ObjectNormalizer">
            <tag>symfony.serializer.normalizers</tag>
        </service>

        <service id="symfony.serializer.denormalizer.array" class="Symfony\Component\Serializer\Normalizer\ArrayDenormalizer">
            <tag>symfony.serializer.normalizers</tag>
        </service>

        <service id="symfony.serializer.normalizer.datetime" class="Symfony\Component\Serializer\Normalizer\DateTimeNormalizer">
            <argument type="collection"><argument key="datetime_format">Y-m-d H:i:s O</argument></argument>
            <tag>symfony.serializer.normalizers</tag>
        </service>

        <service id="symfony.serializer.normalizer.entity" class="RestOnPhp\Normalizer\EntityNormalizer">
            <argument type="collection"></argument>
            <argument type="service" id="api.metadata.xml"></argument>
            <argument type="service" id="doctrine.orm.entity_manager"></argument>
            <argument type="tagged_iterator" id="api.serializer.normalizers"></argument>
            <tag>symfony.serializer.normalizers</tag>
        </service>

        <service id="symfony.serializer.normalizer.relation" class="RestOnPhp\Normalizer\RelationNormalizer">
            <argument type="service" id="api.metadata.xml"></argument>
            <argument type="service" id="doctrine.orm.entity_manager"></argument>
            <tag>api.serializer.normalizers</tag>
        </service>

        <service id="symfony.serializer" class="Symfony\Component\Serializer\Serializer" public="true">
            <argument type="collection">
                <argument type="service" id="symfony.serializer.normalizer.datetime"></argument>
                <argument type="service" id="symfony.serializer.normalizer.entity"></argument>
                <argument type="service" id="symfony.serializer.normalizer.object"></argument>
                <argument type="service" id="symfony.serializer.denormalizer.array"></argument>
            </argument>
            <argument type="collection">
                <argument type="service" id="symfony.serializer.encoder.xml_encoder"></argument>
                <argument type="service" id="symfony.serializer.encoder.json_encoder"></argument>
            </argument>
        </service>
    </services>
</container>
